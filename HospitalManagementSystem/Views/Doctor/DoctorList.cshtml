
@{
    ViewData["Title"] = "DoctorList";
    Layout = "~/Views/Shared/AdminPanelLayout.cshtml";
  
    
}

<!doctype html>
<html lang="en">

<body data-sidebar="dark">

    <!-- <body data-layout="horizontal" data-topbar="dark"> -->
    <!-- Begin page -->
    <div id="layout-wrapper">
        <div class="main-content">
            <div class="page-content">
                <div class="container-fluid">

                    <!-- Diğer sayfa içeriği -->

                    <!-- start page title -->
                    <div class="row">
                        <div class="col-12">
                            <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                                <h2 class="mb-sm-0">Doctor Panel</h2>
                                <div class="page-title-right">
                                    <ol class="breadcrumb m-0">
                                        <li class="breadcrumb-item"><a href="javascript: void(0);">Forms</a></li>
                                        <li class="breadcrumb-item active">Form Validation</li>
                                    </ol>
                                </div>

                            </div>
                        </div>
                    </div>
                    <!-- end page title -->
                    <div class="row">
                        <div class="col-12">
                            <div class="card">
                                <div class="card-header">
                                    <h2 class="card-title">Doctor List</h2>
                                </div>
                                <div class="card-body">
                                    <div class="table-responsive">
                                        <table id="datatable-button" name="datatable-button"
                                               class="table table-striped">
                                            <thead>
                                            <tr>
                                                <th>Edit&nbsp; </th>
                                              
                                                <th>FirstName</th>
                                                <th>LastName</th>
                                                <th>TcID</th>
                                                <th>Email</th>
                                            </tr>
                                            </thead>
                                            <tbody>
                                            @foreach (var doctor in Model)
                                            {
                                                <tr>
                                                    <td style="width: 100px">

                                                        <a href="/Doctor/View/@doctor.Id" class="btn btn-outline-danger btn-sm edit"
                                                           title="Düzenle"
                                                           data-id="@doctor.Id">
                                                            <i class="fas fa-pencil-alt"></i>
                                                        </a>

                                                    </td>

                                                    
                                                    <td>@(doctor.FirstName ?? "N/A")</td>
                                                    <td>@(doctor.LastName ?? "N/A")</td>
                                                    <td>@doctor.TCIdNo</td>
                                                    <td>@(doctor.Mail ?? "N/A")</td>

                                                </tr>
                                            }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div> <!-- end col -->
                    </div>

                </div> <!-- container-fluid -->
            </div>

        </div>
        <!-- end main content-->
    </div>
    <!-- END layout-wrapper -->
    <!-- Right Sidebar -->


</body>
</html>
