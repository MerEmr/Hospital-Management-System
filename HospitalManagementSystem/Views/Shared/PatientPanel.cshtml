@{
    ViewData["Title"] = "Patient Panel";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <!-- Favicon -->
    <link rel="shortcut icon" type="image/x-icon" href="~/assets/images/favicon.ico" />
    <title>Hasta Paneli | Örnek Sağlık</title>

    <!-- Gerekli css dosyaları -->
    <link rel="stylesheet" href="plugins/bootstrap/bootstrap.min.css">
    <link href="@Url.Content("~/css/bootstrap/bootstrap.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/css/icofont/icofont.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/css/slick-carousel/slick/slick.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/css/slick-carousel/slick/slick-theme.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/css/patient_table.css")" rel="stylesheet" type="text/css" />

    <!-- Main Stylesheet -->
    <link href="@Url.Content("~/css/main-page-css/style.css")" rel="stylesheet" type="text/css" />
</head>

<body>
    <nav class="navbar navbar-expand-lg navigation" id="navbar">
        <div class="container">
            <a class="navbar-brand">
                <img src="~/assets/images/logo-sm.png">
                <span style="font-size: 20px; font-weight: bolder">Örnek Sağlık</span>
            </a>

            <button class="navbar-toggler collapsed" type="button" data-toggle="collapse" data-target="#navbarmain"
                    aria-controls="navbarmain" aria-expanded="false" aria-label="Toggle navigation">
                <span class="icofont-navigation-menu"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarmain">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item active"><a class="nav-link" @Html.ActionLink("Çıkış Yap", "Index")</a></li>
                </ul>
            </div>
        </div>
    </nav>
    <section class="appoinment section">
        <div class="container">
            <div class="row">
                <div class="col-lg-4">
                    <div class="mt-3">
                        <div class="feature-icon mb-3">
                            <i class="icofont-support text-lg"></i>
                        </div>
                        <span class="h3">Acil Numaramız</span>
                        <h2 class="text-color mt-3">0 - 000 - 00 </h2>
                    </div>
                </div>

                <div class="col-lg-8">
                    <div class="appoinment-wrap mt-5 mt-lg-0 pl-lg-5">
                        <h2 class="mb-2 title-color">Randevu Al</h2>
                        <form id="#" class="appoinment-form" method="post" action="#">
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <select class="form-control" id="exampleFormControlSelect1">
                                            <option>Bölüm Seçin</option>
                                            <option>Kalp Hastalıkları</option>
                                            <option>Genel Cerrahi</option>
                                            <option>Acil</option>
                                            <option>Ortopedi</option>
                                            <option>Beyin ve Sinir Cerrahisi</option>
                                            <option>İç Hastalıları</option>
                                            <option>Diğer</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <select class="form-control" id="exampleFormControlSelect2">
                                            <option>Doktor Seçin</option>
                                            <option>Doktor Ahmet Yıldız</option>
                                            <option>Doktor Mehmet Gün</option>
                                        </select>
                                    </div>
                                </div>

                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <input name="date" id="date" type="text" class="form-control" placeholder="Tarih Giriniz">
                                    </div>
                                </div>

                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <input name="time" id="time" type="text" class="form-control" placeholder="Saat Giriniz">
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <input name="name" id="name" type="text" class="form-control" placeholder="Ad Soyad Giriniz">
                                    </div>
                                </div>

                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <input name="phone" id="phone" type="text" class="form-control" placeholder="Telefon Numarası Giriniz">
                                    </div>
                                </div>
                            </div>
                            <div class="form-group-2 mb-4">
                                <textarea name="message" id="message" class="form-control" rows="6" placeholder="Randevu Detayı Giriniz"></textarea>
                            </div>

                            <a class="btn btn-main btn-round-full" >Onayla<i class="icofont-simple-right ml-2"></i></a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <h2 style="margin-left: 100px" class="mb-2 title-color">Geçmiş Randevularınız</h2>
    <br /><br />
    <div class="table-wrapper">
        <table class="fl-table">
            <thead>
                <tr>
                    <th>Randevu Tarihi</th>
                    <th>Randevu Saati</th>
                    <th>Bölüm</th>
                    <th>Doktor</th>
                    <th>Açıklama</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>06.04.2017</td>
                    <td>08.30</td>
                    <td>Ortopedi</td>
                    <td>Mehmet Gün</td>
                    <td>Kontroller yapıldı</td>
                </tr>
                <tr>
                    <td>06.08.2017</td>
                    <td>08.30</td>
                    <td>Ortopedi</td>
                    <td>Mehmet Gün</td>
                    <td>Kontroller yapıldı</td>
                </tr>
            <tbody>
        </table>
    </div>

    <!-- Gerekli Scriptler -->
    <script src="plugins/jquery/jquery.js"></script>
    <script src="plugins/bootstrap/bootstrap.min.js"></script>
    <script src="plugins/slick-carousel/slick/slick.min.js"></script>
    <script src="plugins/shuffle/shuffle.min.js"></script>

</body>
