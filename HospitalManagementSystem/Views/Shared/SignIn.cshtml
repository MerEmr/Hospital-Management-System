@{
    ViewData["Title"] = "Sign In";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <!-- Favicon -->
    <link rel="shortcut icon" type="image/x-icon" href="~/assets/images/favicon.ico" />
    <title>Giriş Yap | Örnek Sağlık</title>
    <link href="@Url.Content("~/css/SignStyle.css")" rel="stylesheet" type="text/css" />
</head>
<body>
	<div class="modal fade" id="login-modal" role="dialog" aria-labelledby="myModalLabel">
		<div class="modal-dialog">
			<br /> <br /> <br /> <br /> <br /> <br /> <br /> <br />
			<div class="loginmodal-container">
				<h1>Giriş yapın</h1><br>
				<form>
				@using (Html.BeginForm("Register", "Auth", FormMethod.Post, new { enctype = "multipart/form-data" })) {

					<input type="text" name="Mail" placeholder="E-postanızı Giriniz">
					<input type="password" name="Password" placeholder="Şifrenizi Giriniz">
					<input type="submit" name="PatientLogin" class="login loginmodal-submit" value="Hasta Giriş">
					<input type="submit" name="DoctorLogin" class="login loginmodal-submit" value="Doktor Giriş">
					<input type="submit" name="EmployeeLogin" class="login loginmodal-submit" value="Çalışan Giriş">
					<input type="submit" name="AdminLogin" class="login loginmodal-submit" value="Yönetici Giriş">
				}
				</form>
			</div>
		</div>
	</div>
</body>
