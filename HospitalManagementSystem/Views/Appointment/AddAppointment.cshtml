@{
    ViewData["Title"] = "AddAppointment";
    Layout = "~/Views/Shared/PatientPanel.cshtml";
}

<section class="appoinment section">
    <div class="container">
        <div class="row">
            <div class="col-lg-4">
                <div class="mt-3">
                    <div class="feature-icon mb-3">
                        <i class="icofont-support text-lg"></i>
                    </div>
                    <span class="h3">Acil Numaramız</span>
                    <h2 class="text-color mt-3">0 - 000 - 00 </h2>
                </div>
            </div>

            <div class="col-lg-8">
                <div class="appoinment-wrap mt-5 mt-lg-0 pl-lg-5">
                    <h2 class="mb-2 title-color">Randevu Al</h2>
                    @using (Html.BeginForm("AddAppointment", "Appointment", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        <div class="row">

                            <div class="col-lg-6">
                                <div class="form-group">
                                    <select class="form-control" name="DoctorId" id="exampleFormControlSelect2">
                                        <option>Doktor Seçin</option>
                                        <option value="1">Dr. Ahmet Yıldız</option>
                                        <option value="1">Prof. Dr. Mehmet Gün</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <select class="form-control" name="Description" id="exampleFormControlSelect2">
                                        <option>Doktor Seçin</option>
                                        <option value="Kalp">Kalp</option>
                                        <option value="Ortopedi">Ortopedi</option>
                                        <option value="Beyin ve Sinir Cerrahisi">Beyin ve Sinir Cerrahisi</option>
                                        <option value="Dahiliye">Dahiliye</option>

                                    </select>
                                </div>
                            </div>

                            <div class="col-lg-6">
                                <div class="form-group">
                                    <input name="DateOfAppointment" id="date" type="datetime" class="form-control" placeholder="Tarih Giriniz">
                                </div>
                            </div>

                            <div class="col-lg-6">
                                <div class="form-group">
                                    <input name="Name" id="name" type="text" class="form-control" placeholder="Ad Soyad Giriniz">
                                </div>
                            </div>

                        </div>


                        <button class="btn btn-main btn-round-full">Onayla<i class="icofont-simple-right ml-2"></i></button>
                    }
                </div>
            </div>

       
        </div>

        <div class="row">
            <div class="col-lg-12">
                @await Component.InvokeAsync("HistoryAppointmentByUser")
            </div>
        </div>
    </div>
</section>

