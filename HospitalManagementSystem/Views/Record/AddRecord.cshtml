@{
    ViewData["Title"] = "AddRecord";
    Layout = "~/Views/Shared/_DoctorPanelLayout.cshtml";
}

<h1>Record Add</h1>


<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Add Record</h4>
                </div>

                <div class="card-body">
                    <form method="post">
                        <div class="row">
                            <div class="col-md-6">
                                <select class="form-select" name="UserId" aria-label="Kategori">
                                    <option>User</option>
                                    @foreach (var user in ViewBag.User)
                                    {
                                        <option value="@user.Id">@user.FirstName @user.LastName @user.Id</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mt-2">
                                    <label class=" col-form-label">PhoneNumber</label>
                                    <input type="text" class="form-control" name="PhoneNumber" id="txtDoctorName">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mt-2">
                                    <label class=" col-form-label">City</label>
                                    <input type="text" class="form-control" id="txtDoctorLastname"
                                           name="City">
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mt-2">
                                    <label class=" col-form-label">Address</label>
                                    <input type="text" class="form-control" id="txtDoctorUsername"
                                           name="Address">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mt-2">
                                    <label class=" col-form-label">InsuranceNumber</label>
                                    <input type="text" class="form-control" id="txtDoctorMail"
                                           name="InsuranceNumber">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mt-2">
                                    <label class=" col-form-label">BloodType</label>
                                    <input type="text" class="form-control" id="txtTcIdNo"
                                           name="BloodType">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mt-2">
                                    <label class=" col-form-label">Allergy</label>
                                    <input class="form-control" type="password" id="txtPassword" name="Allergy">
                                </div>
                            </div>
                        </div>
                    </form>
                    <button class="btn btn-primary mt-4" type="submit">Kaydet </button>
                </div>
            </div><!-- end card -->
        </div>


    </div>
</div>


